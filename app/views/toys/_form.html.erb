<%= form_for @toy do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="">
    <%= f.label :cat_id %>
    <%= f.collection_select :cat_id, Cat.all, :id, :name,
    {},{class: "dropdown-toggle form-control"} %>
  </div>

  <br>
  <br>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
